{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "kosdockerid/multi-client",
      "hostname": "client",
      "memory": 128,
      "portMappings": [],
      "essential": false,
      "environment": [
        {
          "name": "PGDATABASE",
          "value": "multi-docker"
        },
        {
          "name": "PGHOST",
          "value": "POSTGRES_ENDPOIN"
        },
        {
          "name": "PGPASSWORD",
          "value": "POSTGRES_PASSWORD"
        },
        {
          "name": "PGPORT",
          "value": "5432"
        },
        {
          "name": "PGUSER",
          "value": "POSTGRES_USER"
        },
        {
          "name": "REDIS_HOST",
          "value": "REDIS_ENDPOINT"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ]
    },
    {
      "name": "server",
      "image": "kosdockerid/multi-server",
      "hostname": "api",
      "memory": 128,
      "portMappings": [],
      "essential": false,
      "environment": [
        {
          "name": "PGDATABASE",
          "value": "multi-docker"
        },
        {
          "name": "PGHOST",
          "value": "POSTGRES_ENDPOIN"
        },
        {
          "name": "PGPASSWORD",
          "value": "POSTGRES_PASSWORD"
        },
        {
          "name": "PGPORT",
          "value": "5432"
        },
        {
          "name": "PGUSER",
          "value": "POSTGRES_USER"
        },
        {
          "name": "REDIS_HOST",
          "value": "REDIS_ENDPOINT"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ]
    },
    {
      "name": "worker",
      "image": "kosdockerid/multi-worker",
      "hostname": "worker",
      "memory": 128,
      "portMappings": [],
      "essential": false,
      "environment": [
        {
          "name": "PGDATABASE",
          "value": "multi-docker"
        },
        {
          "name": "PGHOST",
          "value": "POSTGRES_ENDPOIN"
        },
        {
          "name": "PGPASSWORD",
          "value": "POSTGRES_PASSWORD"
        },
        {
          "name": "PGPORT",
          "value": "5432"
        },
        {
          "name": "PGUSER",
          "value": "POSTGRES_USER"
        },
        {
          "name": "REDIS_HOST",
          "value": "REDIS_ENDPOINT"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "kosdockerid/multi-nginx",
      "hostname": "nginx",
      "memory": 128,
      "links": [
        "client",
        "server"
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "protocol": "tcp",
          "containerPort": 80
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PGDATABASE",
          "value": "multi-docker"
        },
        {
          "name": "PGHOST",
          "value": "POSTGRES_ENDPOIN"
        },
        {
          "name": "PGPASSWORD",
          "value": "POSTGRES_PASSWORD"
        },
        {
          "name": "PGPORT",
          "value": "5432"
        },
        {
          "name": "PGUSER",
          "value": "POSTGRES_USER"
        },
        {
          "name": "REDIS_HOST",
          "value": "REDIS_ENDPOINT"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ]
    }
  ]
}
